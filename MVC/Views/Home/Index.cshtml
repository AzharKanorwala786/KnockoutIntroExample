</style>
<div class="row">
    <h2>Your seat reservations</h2>
    <h4>Add Details</h4>
    <button type="button" class="btn btn-default btn-md" data-toggle="modal" data-target="#myModal">Add Details</button>
    <button type="button" class="btn btn-default btn-md" data-toggle="modal" data-target="#myModaltwo">Add Details</button><br /><br />
      <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <form data-bind="submit:addItem">
                        <table class="table table-bordered">
                            <tr>
                                <td><strong>Passenger Name:-</strong></td>
                                <td><input type="text" class="form-control" data-bind="value:name" /></td>
                            </tr>
                            <tr>
                                <td><strong>Meal:-</strong></td>
                                <td><input type="text" class="form-control" data-bind="value:meal" /></td>
                            </tr>
                            <tr>
                                <td><strong>Price:-</strong></td>
                                <td><input class="form-control" data-bind="value:price" /></td>
                            </tr>
                        </table>
                        <br>
                        <button type="submit" class="btn btn-default btn-md">Create</button>
                        <br><br>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

    <div id="myModaltwo" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <form data-bind="submit:addItem">
                        <table class="table table-bordered">
                            <tr>
                                <td><strong>Value 1:-</strong></td>
                                <td><input type="text" class="form-control"/></td>
                            </tr>
                            <tr>
                                <td><strong>Value 2:-</strong></td>
                                <td><input type="text" class="form-control"/></td>
                            </tr>
                        </table>
                        <br>
                        <button type="submit" class="btn btn-default btn-md">Create</button>
                        <br><br>
                    </form>
                    <strong>Sum Value is </strong>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Passenger name</th>
                <th>Meal</th>
                <th>Surcharge</th>
            </tr>
        </thead>
        <!-- Todo: Generate table body -->
        <tbody data-bind="foreach: itemArray">
            <tr>
                <td data-bind="text: name"></td>
                <td data-bind="text: meal"></td>
                <td data-bind="text: price"></td>
            </tr>
        </tbody>
    </table>
</div>
